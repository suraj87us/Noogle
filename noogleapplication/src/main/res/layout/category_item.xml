<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/category_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <View
        android:id="@+id/category_overlay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/category_gradient"/>

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/category_iv"
        android:layout_alignTop="@id/category_iv"
        android:layout_alignRight="@id/category_iv"
        android:layout_alignBottom="@id/category_iv"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Hello"
        android:textSize="27sp"
        android:textColor="#FFFF" />

</RelativeLayout>