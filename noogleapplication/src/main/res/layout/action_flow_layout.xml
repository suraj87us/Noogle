<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:platresize="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/master_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar" />


    <ProgressBar
        android:id="@+id/horizontal_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_marginTop="-6dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/horizontal_progressBar"
        android:animateLayoutChanges="true"
        android:gravity="center"
        platresize:maximumwidth="600dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/common_loading_display"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/AppTheme"
                android:visibility="gone" />
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_header"
            app:cardBackgroundColor="@color/grey_background"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="-1dp"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/header_card_primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_87"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/header_card_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_card_primary_text"
                    android:textColor="@color/secondary_gray_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/header_card_end_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black_87"
                    android:textSize="20sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <com.giyer.noogle.util.LockableScrollView
            android:id="@+id/content_scrollview_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:layout_below="@+id/card_header"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:isScrollContainer="false"
            android:overScrollMode="never"
            android:requiresFadingEdge="none"
            android:scrollbars="none">

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.giyer.noogle.util.LockableScrollView>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@drawable/nav_item_color_state"
            app:itemTextColor="@drawable/nav_item_color_state"
            app:menu="@menu/bottom_nav_items">

        </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>
</RelativeLayout>