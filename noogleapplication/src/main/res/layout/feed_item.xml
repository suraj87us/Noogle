<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="0.5"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/feed_title"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:text="This is the title text...."
                android:layout_gravity="start"
                android:layout_weight="0.20"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/feed_subtitle"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:text="This is the sub-title text...."
                android:layout_gravity="start"
                android:layout_weight="0.20"
                android:textSize="12sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/feed_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Last Updated 2hrs ago"
                android:textSize="10sp"
                android:layout_weight="0.1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/feed_thumbnail"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:maxWidth="100dp"
            android:maxHeight="100dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>